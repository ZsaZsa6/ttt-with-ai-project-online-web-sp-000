#!/usr/bin/env ruby

require_relative '../config/environment'

    puts "Welcome to Tic Tac Toe!"

    select_game = ""
    until select_game == "1" || select_game == "2" || select_game == "0"
    puts "What kind of game would you like to play?
          For one player, type 1,\n
          for two players, type 2,\n
          to watch the computer play press 0"

    select_game = gets.strip

    if select_game == "1"
        puts "Which token would you like to be? X or O"
        input_token = gets.strip
        if input_token.downcase == "x"
          Player.new(token = "X")
        elsif input_token.downcase == "o"
          Player.new(token = "O")

    game = Game.new(player_1 = Players::Computer("X"), player_2 = Players::Human("O"), board = Board.new)

    elsif select_game == "2"
      puts "Which token would you like to be? X or O"
      input_token = gets.strip
      if input_token.downcase == "x"
        Player.new(token = "X")
      elsif input_token.downcase == "o"
        Player.new(token = "O")

    game = Game.new

    else select_game == "0"
    game = Game.new(player_1 = Players::Computer("X"), player_2 = Players::Computer("O"), board = Board.new)



    until game.won? || game.draw?
    game.play
    end


  #   play_again = ""
  #   until play_again.downcase == "n" || play_again.downcase == "no"
  #       puts "Would you like to play again?"
  #       play_again = gets.strip
  #       play_again.downcase == "y" || play_again.downcase == "yes"
  #
  #   game = Game.new
  #   until game.won? || game.draw?
  #   game.play
  #   end
  # end
end
end
end
end
